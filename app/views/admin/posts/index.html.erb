
<h1>Admin Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.discription %></td>
        <td><%= post.status %></td>
        <td>
          <%= link_to 'Show', admin_post_path(post) %>
          <% if policy(@posts).update? %>
            <%= link_to 'Edit Post', edit_admin_post_path(post) %>
          <% end %>
          <%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
      <% if policy(Post).create? %>
        <%= link_to 'New Post', new_admin_post_path %>
      <% end %>
    