<%= form_for([:admin, @tour]) do |form| %>
  <div class="form-group">
    <%= form.label :title, I18n.t("activerecord.attributes.tour.title") %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.label :description, I18n.t("activerecord.attributes.tour.description") %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :trip, I18n.t("activerecord.attributes.tour.trip") %>
    <%= form.text_area :trip, class: "form-control" %>
  </div>
  
  <%= render "image_preview", form: form, tour:@tour %>

  <div class="form-group ">
    <%= form.label :price, I18n.t("activerecord.attributes.tour.price") %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :status, I18n.t("activerecord.attributes.tour.status") %>
    <%= form.select :status, options_for_select(Tour.statuses.map { |key, value| [key.humanize, key] }), {prompt: "..."}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :detail, I18n.t("activerecord.attributes.tour.detail") %>
    <%= form.text_area :detail, class: 'form-control ckeditor' %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, I18n.t("activerecord.attributes.tour.quantity") %>
    <%= form.text_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group ">
    <%= form.label :time, I18n.t("activerecord.attributes.tour.time") %>
    <%= form.text_field :time, class: 'form-control' %>
  </div>

  <div class="form-group ">
    <%= form.label :transport, I18n.t("activerecord.attributes.tour.transport") %>
    <%= form.text_field :transport, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :list_tour_id, I18n.t("activerecord.attributes.tour.list_tour_id") %>
    <%= form.select :list_tour_id, options_for_select(ListTour.all.map { |c| [c.name, c.id] }), { prompt: I18n.t("activerecord.attributes.tour.list_tour_id.prompt") }, class: 'form-control' %>
  </div>

  <div class="actions">
  <%= form.submit "#{action} Tour", class:"btn btn-primary" %>
  <button type="button" class="btn btn-outline-primary"><%= link_to 'Trở về', admin_tours_path %></button>                                
 </div>
<% end %>
