<p id="notice"><%= notice %></p>

<h1>List Tours</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_tours.each do |list_tour| %>
      <tr>
        <td><%= list_tour.name %></td>
        <td><%= list_tour.category_id %></td>
        <td><%= link_to 'Show', admin_list_tour_path(list_tour) %></td>
        <td><%= link_to 'Edit', edit_admin_list_tour_path(list_tour) %></td>
        <td><%= link_to 'Destroy', admin_list_tour_path(list_tour), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

